<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mythtv.android" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:name=".library.core.MainApplication"
        android:allowBackup="false"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leanback">

        <activity android:name="org.mythtv.android.player.MainActivity"
            android:logo="@drawable/app_icon_quantum"
            android:screenOrientation="landscape"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".player.PlayerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

        <activity android:name=".player.recordings.RecordingsActivity" />
        <activity android:name=".player.recordings.RecordingDetailsActivity" />

        <activity android:name=".player.videos.VideosActivity" />
        <activity android:name=".player.videos.VideoDetailsActivity" />

        <activity
            android:name=".library.ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <!-- MythTV Receivers -->
        <receiver android:name=".library.core.RefreshLiveStreamsReceiver" />

        <!-- MythTV Providers -->
        <provider
            android:name=".library.persistence.repository.MythtvProvider"
            android:authorities="org.mythtv.android.provider"
            android:enabled="true"
            android:exported="true"
            android:syncable="false"/>

    </application>

</manifest>
