<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mythtv.android" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature android:name="android.software.leanback"
        android:required="true" />

    <application
        android:name=".library.core.MainApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_mythtv"
        android:label="@string/app_name"
        android:theme="@style/Theme.Leanback">

        <activity android:name="org.mythtv.android.player.MainActivity"
            android:logo="@drawable/mythtv_logo"
            android:screenOrientation="landscape"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".player.recordings.RecordingsActivity">

            <meta-data android:name="android.app.default_searchable"
                android:value=".player.search.SearchableActivity" />

        </activity>
        <activity android:name=".player.recordings.RecordingDetailsActivity" />

        <activity android:name=".player.videos.VideosActivity" />
        <activity android:name=".player.videos.VideoDetailsActivity" />

        <activity
            android:name=".library.ui.settings.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <activity
            android:name=".player.search.SearchableActivity"
            android:launchMode="singleTop">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>

        <activity
            android:name=".player.PlayerActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />

        <!-- MythTV Receivers -->
        <receiver android:name=".library.core.RefreshLiveStreamsReceiver" />
        <receiver android:name=".library.core.RefreshTitleInfosReceiver" />
        <receiver android:name=".library.core.RefreshRecordedProgramsReceiver" />

        <!-- MythTV Providers -->
        <provider
            android:name=".library.persistence.repository.MythtvProvider"
            android:authorities="org.mythtv.android.provider"
            android:enabled="true"
            android:exported="true"
            android:syncable="false"/>

    </application>

</manifest>
