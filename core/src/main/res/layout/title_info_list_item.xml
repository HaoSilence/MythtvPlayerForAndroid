<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="157dp">

    <RelativeLayout
        android:id="@+id/title_info_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/title_info_item_coverart"
            android:layout_width="75dp"
            android:layout_height="125dp"
            android:layout_marginStart="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/title_info_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:transitionName="@string/title_info_transition"
            android:layout_toRightOf="@+id/title_info_item_coverart"
            android:layout_toEndOf="@+id/title_info_item_coverart"
            tools:text="test title" />

        <TextView
            android:id="@+id/title_info_item_inetref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toRightOf="@+id/title_info_item_coverart"
            android:layout_toEndOf="@+id/title_info_item_coverart"
            android:layout_below="@+id/title_info_item_title"
            tools:text="test inetref" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground" />

</FrameLayout>